@model FacetsViewModel
@{
    ViewData["Title"] = "FacetTest";
}
<hr />

@using (Html.BeginForm("GetFacets", "Facet"))
{
    for (int j = 0; j < Model.TheTestFacets.Count; j++)
    {
        <div id="filters-container" class="govuk-grid-column-one-third">
        <h3 id="filters-heading">@Model.TheTestFacets[j].Name</h3>
            @for (int i = 0; i < Model.TheTestFacets[j].FacetValues.Count; i++)
            {
                <div>
                    @Html.CheckBoxFor(r => Model.TheTestFacets[j].FacetValues[i].IsSelected)
                    <label>@Model.TheTestFacets[j].FacetValues[i].Value</label>

                    @Html.HiddenFor(h => @Model.TheTestFacets[j].FacetValues[i].Value)
                </div>
            }
            <hr />
        </div>
    }
    <button type="submit" class="govuk-button" data-module="govuk-button">
        Apply filters
    </button>
}